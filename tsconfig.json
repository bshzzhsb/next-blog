{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "paths": {
      "@/components/*": [
        "components/*"
      ],
      "@/page-components/*": [
        "page-components/*"
      ],
      "@/pages/*": [
        "pages/*"
      ],
      "@/lib/*": [
        "lib/*"
      ],
      "@/assets/*": [
        "assets/*"
      ],
      "@/settings/*": [
        "settings/*"
      ],
      "@/mdx-components/*": [
        "mdx-components/*"
      ],
      "@/utils/*": [
        "utils/*"
      ],
      "@/constants/*": [
        "constants/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/scripts/generate-sitemap.mjs"
  ],
  "exclude": [
    "node_modules"
  ]
}
